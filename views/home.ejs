<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<div style="display: block; margin-left:auto; margin-right:auto; width: fit-content; height: min-content;">

  <% for (let i = 0; i < items.length; i++) { %>
  <a href="/item/<%= items[i].id %>" class="section">
    <div style="position: relative; bottom: -75% ;">
      <p class="section__description"><%= items[i].description %></p>
      <div style="width: auto; padding: 0%; font-size: smaller;">
        <p style="width: max-content; color: blue; font-weight: bold; display: inline; margin-right: 10px;">
          Автор - <%= items[i].author %>
        </p>
        <p style="color: gray; display: block;">
          Добавлено - <%= items[i].date_creating %>
        </p>
      </div>
    </div>
    <div style="position: relative; bottom: 30% ;">
      <h2 class="section__title"><%= items[i].title %></h2>
      <img class="section__image" src="img/<%= items[i].image %>">
    </div>
  </a>
  <% } %>

</div>

<%- include('particles/footer.ejs') %>