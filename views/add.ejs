<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<form action="/add" method="post" class="item-block" enctype="multipart/form-data"> 
    <div class="form-group">
        <label class="form-group__label" for="title">title</label>
        <input class="form-group__input" type="text" id="title" name="title" placeholder="title">
    </div>

    <div class="form-group">
        <label class="form-group__label" for="image" style="cursor: pointer">image</label>
        <input class="form-group__input" type="file" style="display: none;" id="image" name="image" placeholder="image" accept="image/png, image/jpeg, image/jpg, image/webp">
    </div>

    <div class="form-group">
        <label class="form-group__label" for="description">description</label>
        <input class="form-group__input" type="text" id="description" name="description" placeholder="description">
    </div>
    <% if(auth){ %>
    <input class="form-button" type="submit" value="Создать">
    <% } %>
</form>

<%- include('particles/footer.ejs') %>