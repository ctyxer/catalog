<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<form action="/categories/update" method="post" class="bg-white p-2 border-4 border-black rounded-md w-fit ml-auto mr-auto m-4" enctype="multipart/form-data">
  <div class="w-auto p-2">
    <label for="name">Name</label>
    <input class="block border-2 border-black rounded w-full m-0" type="text" id="name" name="name" value="<%= category.name %>">
  </div>
  <input type="hidden" name="id" id="id" value="<%= category.id %>">
  <% if(auth){ %>
  <div class="w-min ml-auto mr-auto p-4 pb-2">
    <input class="border-4 border-black rounded-md" type="submit" value="Update">
  </div>
  <% } %>
</form>

<%- include('particles/footer.ejs') %>