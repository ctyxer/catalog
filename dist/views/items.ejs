<%- include('particles/header.ejs') %>
<%- include('particles/navigation.ejs') %>

<% if(typeof search !== 'undefined'){ %>
<div id="search">
  <p class="font-bold m-4 text-lg">Find: "<%= search %>"</p>
</div>
<% } %>

<% if(items.length == 0){ %>
<div class="font-bold m-4">
  <p>No Items</p>
</div>
<% } else { %>

<%- include('particles/sort.ejs') %>

<% } %> 

<% for (let i=0; i < items.length; i++) { %>
<div name="item" class="bg-white rounded-md border-4 border-black p-3 m-1">
  <a href="/items/<%= items[i].id %>" class="w-full h-full">
    <img class="inline-block rounded-2xl max-h-60 max-w-60 pr-2" src="/img/<%= items[i].image %>" />
    <div class="inline-block">
      <h2 class="text-lg font-bold mb-auto">
        <%= items[i].title %>
      </h2>
      <a href="/users/<%= items[i].author %>" class="mr-auto">
        Author - <%= items[i].author %>
      </a>
      <p href="/users/<%= items[i].author %>" class="mr-auto">
        Category - <%= items[i].category.name %>
      </p>
      <p class="text-gray-600">
        Created - <%= items[i].date_creating %>
      </p>
    </div>
  </a>
</div>
<% } %>

<%- include('particles/footer.ejs') %>