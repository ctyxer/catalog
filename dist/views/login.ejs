<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<form action="/auth/login" method="post" class="bg-white rounded-md border-4 border-black p-2 w-min ml-auto mr-auto mt-3">
  <p class='font-bold text-xl'>Sign in</p>
  <div class="mb-4 mt-4">
    <label for="username">Username</label>
    <input type="text" class="border-2 border-black rounded p-1" name="username">
  </div>

  <div class="mb-4 mt-4">
    <label for="password">Password</label>
    <input type="password" class="border-2 border-black rounded p-1" name="password">
  </div>
  
  <label for="error" class="font-bold text-red-600"><%= error %></label>
  <input type="submit" value="Sign in" class="rounded-md border-4 border-black m-2 ml-auto mr-auto">
</form>
<div class="mr-auto ml-auto w-min m-2">
  <a href="/register" class="font-bold text-xl underline">Registration</a>
</div>
